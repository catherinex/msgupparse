<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >
    
    <ImageView 
        android:id="@+id/iv_contact_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_photo"/>
    
    <TextView 
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_contact_photo"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Reistlin"
        android:textSize="16sp"/>
    
    <TextView 
        android:id="@+id/tv_contact_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what's up"
        android:layout_alignLeft="@+id/tv_contact_name"
        android:layout_below="@+id/tv_contact_name"/>

</RelativeLayout>
